<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.redi.MyFirstAndroidApp.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@drawable/ic_menu_share"
            android:id="@+id/main_btn1"
            android:layout_weight="0.16"
            android:background="@color/colorAccent"
            android:layout_height="30dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_menu_manage"
            android:id="@+id/main_btn2"
            android:layout_weight="0.16"
            android:background="@android:color/holo_green_dark"
            android:layout_below="@+id/main_btn1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/main_btn3"
            android:layout_weight="0.10"
            android:background="@color/colorPrimary"
            android:layout_marginTop="25dp"
            android:layout_below="@+id/main_btn2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:layout_width="match_parent"
            app:srcCompat="@android:drawable/ic_lock_idle_lock"
            android:id="@+id/main_btn4"
            android:layout_weight="0.16"
            android:layout_marginTop="25dp"
            android:background="@android:color/holo_orange_dark"
            android:layout_height="30dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="30dp"
            app:srcCompat="@android:drawable/ic_dialog_map"
            android:id="@+id/main_btn5"
            android:layout_weight="0.16"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:layout_marginTop="25dp" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_menu_send"
            android:id="@+id/main_btn10"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@android:color/holo_red_dark"
            android:layout_weight="0.16"
            android:layout_marginTop="25dp" />

    </LinearLayout>

</RelativeLayout>
