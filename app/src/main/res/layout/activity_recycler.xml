<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_recycler"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.redi.MyFirstAndroidApp.models.activities.RecyclerActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="11dp">

        <ImageButton
            android:id="@+id/std_img_btn_home"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1.24"
            android:background="@color/cardview_shadow_end_color"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/images" />

        <ImageButton
            android:id="@+id/std_img_btn_tab"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/holo_green_dark"
            app:srcCompat="@drawable/ic_menu_manage" />

        <ImageButton
            android:id="@+id/std_img_btn_ser"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/cardview_shadow_end_color"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageButton
            android:id="@+id/std_img_btn_lock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.24"
            android:background="@android:color/holo_orange_dark"
            android:paddingRight="0dp"
            app:srcCompat="@android:drawable/ic_lock_idle_lock"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp" />

        <ImageButton
            android:id="@+id/std_img_btn_map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1.24"
            android:background="@color/cast_intro_overlay_button_background_color"
            android:paddingRight="0dp"
            app:srcCompat="@android:drawable/ic_dialog_map"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp" />

        <ImageButton
            android:id="@+id/std_img_btn_exit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1.24"
            android:background="@color/colorAccent"
            android:paddingRight="0dp"
            app:srcCompat="@drawable/ic_menu_send"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="8dp" />

    </GridLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="391dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
