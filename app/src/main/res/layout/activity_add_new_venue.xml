<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_venue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.redi.MyFirstAndroidApp.models.activities.AddNewVenue">

    <EditText
        android:id="@+id/new_venue_txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:freezesText="true"
        android:hint="Name"
        android:inputType="textPersonName"
        android:maxLength="30"
        android:maxLines="1" />

    <EditText
        android:id="@+id/new_venue_txt_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_venue_txt_name"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="Description"
        android:inputType="textPersonName" />

    <Spinner
        android:id="@+id/new_venue_spr_category"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_venue_txt_description"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@+id/new_venue_btn_cancel"
        android:layout_toStartOf="@+id/new_venue_btn_cancel"
        android:background="@color/cast_expanded_controller_seek_bar_progress_background_tint_color" />

    <EditText
        android:id="@+id/new_venue_txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_venue_spr_category"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/new_venue_txt_latitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_venue_txt_address"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Latitude"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/new_venue_txt_longitude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_venue_txt_latitude"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Longitude"
        android:inputType="numberDecimal" />

    <ImageButton
        android:id="@+id/new_venue_btn_cancel"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/new_venue_btn_save"
        android:background="@android:color/holo_red_dark"
        app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

    <ImageButton
        android:id="@+id/new_venue_btn_save"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_venue_txt_longitude"
        android:layout_marginTop="19dp"
        android:background="@android:color/holo_green_dark"
        app:srcCompat="@android:drawable/ic_menu_save" />

</RelativeLayout>
